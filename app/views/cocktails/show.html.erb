<%= render 'shared/banner', image: cl_image_path(@cocktail.photo, {height: 300, width: 400, crop: :fill}) %>

<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %> - <%= link_to "delete", dose_path(dose), method: :delete %> </li>
  <% end %>
</ul>

<%= render 'doses/form' %>
