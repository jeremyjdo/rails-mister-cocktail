
<%= render 'shared/banner', image: "http://res.cloudinary.com/dzly3hnxk/image/upload/c_scale,w_2000/v1502443713/pexels-photo-509791_noiet8.jpg" %>

<div class="container padded text-center">
   <%= link_to "add cocktail", new_cocktail_path, :class=>"btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-12 col-md-8 col-md-offset-2">
        <%= link_to cocktail_path(cocktail.id) do %>
          <article class="post">
            <div class="card-author">
              <% if cocktail.photo? %>
                <div class="post-author" style="background-image: url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
                <% else %>
                <div class="post-author">
                <% end %>
                  <div class="author-details">
                    <span class="author-name"></span>
                      <i class="author-position"></i>
                  </div>
                </div>
            </div>
            <div class="card-content">
              <ul>
                  <li>Classique</li>
              </ul>
              <h2><%= cocktail.name %></h2>
                <p class="description">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi urna dolor, pulvinar quis vestibulum at, pellentesque quis dolor.
                </p>
              <span class="read-time">
              </span>
            </div>
          </article>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
